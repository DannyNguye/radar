<section class="breadcrumb-area text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Sign In</h1>
                <ul class="list-unstyled list-inline">
                    <li class="list-inline-item"><a href="">Home</a></li>
                    <li class="list-inline-item"><i class="fa fa-long-arrow-right"></i>Sign In</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="signup">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="signup-box">
          <h4>Log In To Your Account</h4>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "signup-form"}) do |f| %>

            <div class="field" id="Email">
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>

            <div class="field" id="Password">
              <%= f.password_field :password, placeholder: "Password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.label :remember_me %>
                <%= f.check_box :remember_me %>
              </div>
            <% end %>

            <div class="signup-btn d-flex flex-row justify-content-between">
              <%= f.button "Log in" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "devise/shared/links" %>

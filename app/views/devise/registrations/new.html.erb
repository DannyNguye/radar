<section class="breadcrumb-area text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Sign Up</h1>
                <ul class="list-unstyled list-inline">
                    <li class="list-inline-item"><a href="">Home</a></li>
                    <li class="list-inline-item"><i class="fa fa-long-arrow-right"></i>Sign Up</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="signup">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="signup-box">
                    <h4>Create Your Account</h4>
                    <div>
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "signup-form"}) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                        
                        <div class="field" id="Username">
                          <%= f.text_field :username, placeholder: "Username" %>
                        </div>

                        <div class="field">
                          <%= f.email_field :email, autofocus: true, placeholder: "Email Address", id: 'email'  %>
                        </div>

                        <div class="field" id="Password">
                          <%= f.password_field :password, placeholder: "Password (6 Character Minimum)", id: 'Password' %>
                        </div>

                        <div class="field" id="Confirm Password">
                          <%= f.password_field :password_confirmation, placeholder: "Confirm Password", id: 'Password confirmation' %>
                        </div>

                        <div class="field" id="Location">
                          <%= f.text_field :location, placeholder: "Location" %>
                        </div>

                        <div class="signup-btn d-flex flex-row justify-content-between">
                          <%= f.button "Sign up" %>
                          <span>Already have an account? <a href="">Log in</a></span>
                        </div>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%= render "devise/shared/links" %>
